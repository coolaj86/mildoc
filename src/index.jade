body
  #header
    .top_wrap
      img#logo(src="images/logo.png", alt="Military Standards Object Notation")

  #container
    table.doc_columns
      tbody
        tr
          td.menu_column
            .menu
              ul
                include links


          td.content_column
            //- include mailing
                include documents
            .cwrapper(data-map='mailing_list')
              h1#mailing_list Mailing List
              #list.in_menu
                h2 Google Groups
